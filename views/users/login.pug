extends ../base

block cont
  .container
    .row 
      .col-sm-9.col-md-7.col-lg-5.mx-auto
        if message
          .alert.alert-danger= message
        .card.card-signin.my-5.text-center
          .card-body
            h1.card-title Login
              form(action='/login' method='post')
                .form-group
                  input#exampleInputEmail1.form-control(type='email' name='email' placeholder='Enter email')
                .form-group
                  input#exampleInputPassword1.form-control(type='password' name='password' placeholder='Password')
                button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Login